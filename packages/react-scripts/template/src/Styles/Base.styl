html,
body {
  width: 100%;
  min-height: 100%;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

* {
  box-sizing: border-box;

  &:before,
  &:after {
    box-sizing: inherit;
  }
}

.remove-this {
  margin: 1em;
  padding: 1em;
  background: #80735b;
  color: #fff;
  font-family: $body-font;
  text-align: center;
}
